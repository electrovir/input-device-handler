        "url": "https://github.com/electrovir"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "virmator frontend build && npm run docs && cp -r ./docs-dist ./build-dist/docs/",
        "compile": "virmator compile",
        "docs": "virmator docs",
        "format": "virmator format",
        "publish": "virmator publish \"npm run compile && npm run test:all\"",
        "regenerate-deps": "rm -rf node_modules && rm -f package-lock.json && npm i",
        "start": "npm install && virmator frontend",
        "test": "virmator test-web",
        "test:all": "concurrently --colors --kill-others-on-fail -c auto --names types,tests,spelling,format,docs \"npm run test:types\" \"npm run test:coverage\" \"npm run test:spelling\" \"npm run test:format\" \"npm run test:docs\"",
        "test:coverage": "npm test coverage",
        "test:docs": "virmator docs check",
        "test:format": "virmator format check",
        "test:spelling": "virmator spellcheck",
        "test:types": "tsc --noEmit"
    },
    "dependencies": {
        "@augment-vir/common": "^21.3.6",
        "run-time-assertions": "^0.1.3",
        "typed-event-target": "1.4.1"
    },
    "devDependencies": {
        "@augment-vir/browser": "^21.3.6",
        "@augment-vir/browser-testing": "^21.3.6",
        "@augment-vir/node-js": "^21.3.6",
        "@open-wc/testing": "3.2.0",
        "@types/mocha": "^10.0.3",
        "@web/dev-server-esbuild": "^0.4.3",
